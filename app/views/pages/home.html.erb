<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<h2>Select a date</h2>
<%= form_with url: calculate_stardate_path, method: :post, class: "d-flex" do %>
  <%= date_field_tag :date,
        params[:date],
        class: "form-control",
        placeholder: "Type a keyword"
    %>
  <%= submit_tag "Convert", name: "", class: "btn btn-primary" %>
<% end %>

<% if @stardate %>
  <h2>Your stardate is...</h2>
  <p><%= @stardate %></p>
<% end %>
