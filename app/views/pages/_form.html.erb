<%= form_with url: calculate_stardate_path, method: :post, data: { turbo_frame: 'form_frame' } do |form| %>
  <div class="form-group">
    <%= form.date_field :date, class: "form-control", placeholder: "Select a date" %>
  </div>
  <div class="form-group text-center">
    <%= form.submit "Calculate", class: "btn btn-primary trek-button" %>
  </div>
<% end %>
